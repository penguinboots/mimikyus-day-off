generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model User {
  id           Int           @id @default(autoincrement())
  email        String        @unique
  auth0Sub     String        @unique
  password     String?
  name         String
  achievements Achievement[]
  Character    Character[]
  Item         Item[]
  Move         Move[]
}

model Achievement {
  id        Int       @id @default(autoincrement())
  date_get  DateTime?
  userId    Int
  name      String
  collected Boolean
  user      User      @relation(fields: [userId], references: [id])
}

model Move {
  id        Int       @id @default(autoincrement())
  date_get  DateTime?
  userId    Int
  name      String
  collected Boolean
  user      User      @relation(fields: [userId], references: [id])
}

model Item {
  id       Int    @id @default(autoincrement())
  userId   Int
  name     String
  quantity Int
  user     User   @relation(fields: [userId], references: [id])
}

model Character {
  id      Int     @id @default(autoincrement())
  userId  Int
  hp      Int     
  attack  Int     
  defense Int     
  sp_atk  Int     
  sp_def  Int     
  speed   Int     
  move_1  String
  move_2  String?
  move_3  String?
  move_4  String?
  user    User    @relation(fields: [userId], references: [id])
}
